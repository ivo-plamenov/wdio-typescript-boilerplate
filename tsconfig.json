{
    "compilerOptions": {
        "target": "ES2018",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "module": "commonjs",
        "baseUrl": ".",
        "paths": {
            "*": [ "./*" ],
        },
        "types": ["node", "@wdio/sync", "@wdio/mocha-framework", "chai", "@wdio/selenium-standalone-service", "@wdio/cucumber-framework", "wdio-image-comparison-service"]
    },    
    "include": [
        "./src/**/*.ts",
        "./config/**/*.ts",
        "./test/**/*.ts"
    ],
    "exclude": [
      "./node_modules"
    ]
  }